<div class="container p-4">
 <div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-body">
                <form action="/links/edit/{{link.id}}" method="POST" class="m-10">
                  <div class="form-group">
                      <input type="text" class="form-control" value="{{link.title}}" name="title" placeholder="Title" autofocus required>
                  </div>
                  <div class="form-group">
                      <input type="url" name="url" class="form-control" value="{{link.url}}" placeholder="URL" required>
                  </div>
                  <div class="form-group">
                      <textarea class="form-control textarea" name="description"  rows="2" placeholder="Description">
                        {{link.description}}
                      </textarea>
                  </div>
                  <div class="form-group boton">
                      <button class="btn btn-success btn-block save">
                          Save
                      </button>
                  </div>
                </form>
            </div>
        </div>
    </div>
 </div>
</div>